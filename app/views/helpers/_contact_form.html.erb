                    <label for="message">Your Message</label>
                    <input id="message" type="text" rows="5" placeholder="Your Message">

                    <button type="submit" class="pure-button">Contact me</button>
                </fieldset>
            </form>
        </div>

        <div class="l-box-lrg pure-u-1 pure-u-md-3-5">
