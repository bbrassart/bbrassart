<div class="ribbon l-box-lrg pure-g">
    <div class="l-box-lrg is-center pure-u-1 pure-u-md-1-2 pure-u-lg-2-5">
      <i class="pure-img-responsive fa fa-book fa-5x"></i>
    </div>
    <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-3-5">
        <h2 class="content-head content-head-ribbon">Most recent posts</h2>
    </div>
    <div class="is-center pure-u-1-1">
      <div class="margin__blog--menu pure-menu pure-menu-scrollable custom-restricted">
        <ul class="pure-menu-list">
          <% posts.each do |post| %>
            <li class="pure-menu-item blogpost--entry"><a href="/blog/<%= post.url%>" class="white--text pure-menu-link"><%= post.title %></a></li>
          <%end%>
        </ul>
      </div>
    </div>
</div>
